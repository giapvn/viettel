            <ul class="nav navbar-nav navbar-right">
              <li><a href="/login">Logout</a></li>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div>
      </nav>    
  </div>
  

  <div id="content">
    <div class="row">
      <!-- video -->
      <div class="col-sm-6 col-sm-offset-1">
        <div class="row" style="background-color:powderblue;">
          <video id="video" width="640" height="480" autoplay></video>
        </div>
        <div class="row">
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-default" id="capture">Capture</button>
            <button type="button" class="btn btn-default" id="multi-capture">MultiCapture</button>
            <button type="button" class="btn btn-default" id="record">Record</button>
          </div>
        </div>
      </div>
      <!-- Control -->
      <div class="col-sm-3 col-sm-offset-1">
        <div class="row">
          <!-- PTZ control -->
          <div class="panel panel-primary ptz">
            <div class="panel-heading">
              <h3 class="panel-title">PTZ control</h3>
            </div>
            <div class="panel-body">

              <div class="container-fluid bg-3 text-center">  
                <div class="row">
                  <div class="col-sm-2 col-sm-offset-2">
                    <button type="button" class="btn btn-default hidden" id="capture"></button>
                  </div>
                  <div class="col-sm-2"> 
                    <button type="button" class="btn btn-default" id="up">Up</button>
                  </div>
                  <div class="col-sm-2"> 
                    <button type="button" class="btn btn-default hidden" id="capture"></button>
                  </div>
                </div>
              </div><br>

              <div class="container-fluid bg-3 text-center">  
                <div class="row">
                  <div class="col-sm-2 col-sm-offset-1">
                    <button type="button" class="btn btn-default" id="left">Left</button>
                  </div>
                  <div class="col-sm-3 col-sm-offset-1"> 
                    <button type="button" class="btn btn-default" id="auto">Auto</button>
                  </div>
                  <div class="col-sm-2"> 
                    <button type="button" class="btn btn-default" id="right">Right</button>
                  </div>
                </div>
              </div><br>

              <div class="container-fluid bg-3 text-center">  
                <div class="row">
                  <div class="col-sm-2 col-sm-offset-2">
                    <button type="button" class="btn btn-default hidden" id="capture"></button>
                  </div>
                  <div class="col-sm-2"> 
                    <button type="button" class="btn btn-default" id="down">Down</button>
                  </div>
                  <div class="col-sm-2"> 
                    <button type="button" class="btn btn-default hidden" id="capture"></button>
                  </div>
                </div>
              </div><br>             
            </div>
          </div>
        </div>


        <div class="row">
          <div class="panel panel-primary ptz">
            <div class="panel-heading">
              <h3 class="panel-title">Video Configuration</h3>              
            </div>
            <div class="panel-body">
              <ul class="list-group">
                <li class="list-group-item">Brightness
                  <input id="brightness" type="range" value="50" min="0" max="100" step="5"/>
                </li>
                <li class="list-group-item">Contrast
                  <input id="contrast" type="range" value="50" min="0" max="100" step="5"/>
                </li>
                <li class="list-group-item">Saturation
                  <input id="saturation" type="range" value="50" min="0" max="100" step="5"/>
                </li>
                <li class="list-group-item">Sharpness
                  <input id="sharpness" type="range" value="50" min="0" max="100" step="5"/>
                </li>
              </ul>
            </div>
          </div>
        </div>


      </div>
    </div>
  </div>

  <div id="footer">
    
  </div>

  <!-- javascript files -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script type="text/javascript" src="/js/jquery.js"></script>
  <script type="text/javascript" src="/js/bootstrap.js"></script>
  <script type="text/javascript" src="/js/liveview.js"></script>

</body>
</html>


